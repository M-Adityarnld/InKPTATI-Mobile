<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="InKPTATIF"
        android:textColor="@android:color/white"
        android:fontFamily="@font/jost"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/appIconImageView"
        android:layout_width="393dp"
        android:layout_centerHorizontal="true"
        android:layout_height="220dp"
        android:layout_below="@id/titleTextView"
        android:scaleType="fitXY"
        android:src="@drawable/pictlogin" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi penginputan nilai untuk dosen pembimbing dan penguji,khusus untuk Kerja Praktik dan Tugas Akhir"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:gravity="center"
        android:textColor="@color/primary"
        android:layout_below="@id/appIconImageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/jost"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_input"
        android:hint="Nomor Induk Pengajar"
        android:minHeight="48dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/jost"
        android:padding="10dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_input"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/jost"
        android:minHeight="48dp"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptionTextView"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/jost"
        android:text="NIP" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameEditText"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="23dp"
        android:text="Password" />

    <ImageButton
        android:id="@+id/showPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/open_eye"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@id/passwordEditText"
        android:layout_alignEnd="@id/passwordEditText"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/showPasswordIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/eye_slash_solid"
        android:visibility="invisible" />



    <CheckBox
        android:id="@+id/rememberMeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:textColor="@color/secondaryblue"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/forgotPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password"
        android:textColor="@color/secondaryblue"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="35dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/jost"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        android:layout_below="@id/rememberMeCheckBox"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>



</RelativeLayout>
